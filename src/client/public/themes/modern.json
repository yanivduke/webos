{
  "id": "modern",
  "name": "Modern",
  "description": "Contemporary design with rounded corners, gradients, and smooth animations",
  "version": "1.0.0",
  "colors": {
    "primary": "#6366f1",
    "background": "#f5f5f5",
    "text": "#1f2937",
    "textInverse": "#ffffff",
    "border": "#d1d5db",
    "borderLight": "#e5e7eb",
    "borderDark": "#9ca3af",
    "windowChrome": "#ffffff",
    "windowTitle": "#6366f1",
    "windowTitleText": "#ffffff",
    "highlight": "#6366f1",
    "highlightText": "#ffffff",
    "shadow": "#9ca3af",
    "accent": "#ec4899",
