{
  "id": "classic-amiga",
  "name": "Classic Amiga Workbench",
  "description": "Original Amiga Workbench 3.1 aesthetic with authentic colors and styling",
  "version": "1.0.0",
  "colors": {
    "primary": "#0055aa",
    "background": "#a0a0a0",
    "text": "#000000",
    "textInverse": "#ffffff",
    "border": "#000000",
    "borderLight": "#ffffff",
    "borderDark": "#000000",
    "windowChrome": "#a0a0a0",
