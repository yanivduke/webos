    "shadow": "#707070",
    "accent": "#ffaa00",
    "success": "#00ff00",
    "warning": "#ffff00",
    "error": "#ff0000",
    "disabled": "#888888",
    "inputBg": "#ffffff",
    "inputText": "#000000",
